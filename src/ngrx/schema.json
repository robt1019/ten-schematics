{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsForTenNgrx",
  "title": "Ten Ngrx Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "default": "name"
    },
    "module": {
      "type": "string",
      "description": "The module to initialise the store in"
    },
    "root": {
      "type": "boolean",
      "default": false
    },
    "onlyEmptyRoot": {
      "type": "boolean",
      "default": false
    },
    "onlyAddFiles": {
      "type": "boolean",
      "default": false
    },
    "useEntityAdapter": {
      "type": "boolean",
      "default": true,
      "description": "Flag to indicate whether reducer should use EntityAdapter",
      "alias": "ea"
    }
  }
}